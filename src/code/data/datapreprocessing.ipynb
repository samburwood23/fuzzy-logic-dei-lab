# Women's Workplace Stress & DEI Analysis ‚Äì Dataset Preparation
# ---------------------------------------------------------------

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import os

# ---------------------------------------------------------------
# 1Ô∏è‚É£ Load Dataset
# ---------------------------------------------------------------
data_path = "./stress_dataset.csv"

if not os.path.exists(data_path):
    raise FileNotFoundError("‚ö†Ô∏è Please place 'stress_dataset.csv' in the data/ folder.")

df = pd.read_csv(data_path)
print("‚úÖ Loaded dataset with shape:", df.shape)
df.head()

# ---------------------------------------------------------------
# 2Ô∏è‚É£ Inspect and Clean Data
# ---------------------------------------------------------------
print("\nMissing values per column:")
print(df.isnull().sum())

# Drop missing or irrelevant columns
df = df.dropna()
df.columns = [c.strip().replace(" ", "_").lower() for c in df.columns]
print("\nRenamed Columns:", df.columns.tolist())

# ---------------------------------------------------------------
# 3Ô∏è‚É£ Feature Normalization (Scale to 0‚Äì10)
# ---------------------------------------------------------------
def normalize(series):
    return 10 * (series - series.min()) / (series.max() - series.min())

numeric_cols = df.select_dtypes(include=[np.number]).columns
for col in numeric_cols:
    df[col] = normalize(df[col])

print("\n‚úÖ Normalized numeric features to 0‚Äì10 scale")

# ---------------------------------------------------------------
# 4Ô∏è‚É£ Basic Exploration
# ---------------------------------------------------------------
plt.figure(figsize=(8, 5))
sns.heatmap(df.corr(), annot=True, cmap="coolwarm", fmt=".2f")
plt.title("Correlation Heatmap (Normalized Data)")
plt.show()

# ---------------------------------------------------------------
# 5Ô∏è‚É£ Save Cleaned Data
# ---------------------------------------------------------------
clean_path = "./stress_dataset_cleaned.csv"
df.to_csv(clean_path, index=False)
print(f"üíæ Cleaned dataset saved to: {clean_path}")
